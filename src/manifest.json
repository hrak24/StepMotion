{
  "manifest_version": 2,
  "name": "StepMotion",
  "version": "1.0.0",
  "description": "Step back / forward on Amazon Prime Video as you like by adding control button.",
  "content_scripts": [{
	  "matches":["https://www.amazon.com/gp/video/detail/*","https://www.amazon.com/gp/product/*"],
	  "js":["./js/stepMotion.js"]
  }],
  "background":{
    "scripts":["./js/background.js"],
    "persistent":false
  },
  "browser_action": {
    "default_popup": "popup.htm",
    "default_icon": "icon.png"
  },
  "permissions": [ "tabs","https://www.amazon.com/gp/product/*","https://www.amazon.com/gp/video/detail/*"],
  "web_accessible_resources":[
    "js/stepSeekVideo.js"
  ],
  "icons" : {
    "128": "icon.png"
  }
}
